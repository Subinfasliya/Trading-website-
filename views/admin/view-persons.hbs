<section style="background-color: black;">
  <div class="container  " style="padding-top: 105px;">
    <h1 class="text-center" style="font-weight: bold;color: rgb(172, 169, 169);">Registered Student Details</h1>
    <hr>

    <div class="row pt-3">
      <a href="/admin/admin-videos" class="btn"
        style="background-color: goldenrod;width: fit-content;margin-bottom: 20px;color: #fff;margin-left: 13px;">Videos</a>
      <a href="/admin/active" class="btn btn-primary "
        style="margin-bottom: 20px;margin-left: auto;width: fit-content;margin-right: 13px;">Activated Students</a>
      <div class="table-responsive">
        <table class="table " border="5px" style="color:#fff;background-color:gray;">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Date</th>
              <th scope="col">Course</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Mobile</th>
              <th scope="col">Password</th>



            </tr>
          </thead>
          <tbody>
            {{#each persons}}
            <tr>
              <th scope="row">></th>
              <td>{{this.Date}}</td>
              <td>{{this.CourseDetails}}</td>
              <td>{{this.Name}}</td>
              <td>{{this.Email}}</td>
              <td>{{this.Mobile}}</td>
              <td>{{this.Password}}</td>






              <td>
                <a href="/admin/delete-persons/{{this._id}}" class="btn btn-danger "
                  onclick="return confirm('Are you want to delete this Student {{this.Name}}?')">Delete</a>
              </td>
              <td>
                <button onclick="addToActive('{{this._id}}','{{this.Name}}')" class="btn btn-success ">Active</button>
              </td>

            </tr>
            {{/each}}
          </tbody>
      </div>
      </table>
    </div>

  </div>
</section>
